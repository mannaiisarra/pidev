

{% extends 'layout_back.html.twig' %}
{% block container %}
<div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> List Catégorie</h4>


                                
                    <div class="row mb">
          <!-- page start-->
          <div class="content-panel">
            <div class="adv-table">
              <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                  <tr>
                    <th>libelle</th>
                    <th>image</th>
                    <th class="hidden-phone">modifier</th>
                    <th class="hidden-phone">supprimer</th>
                    <th class="hidden-phone">affiche détails</th>
                  </tr>
                </thead>
                <tbody>
                        {% for cat in cats %}
                  <tr class="gradeU">
                    <td>{{cat.libelle}}</td>
                    <td><img src="{{ asset('images/') }}{{ cat.nomImage }}" style="width: 100px;height: 100px"></td>
                    <td class="hidden-phone"><a href="{{path('bibliothequeback_updatCat',{'id':cat.id})}}">modifier</a> </td>
                    <td class="center hidden-phone"><a href="{{path('bibliothequeback_deleteCat',{'id':cat.id})}}">supprimer</a> </td>
                    <td class="center hidden-phone"><a href="{{path('bibliothequeback_detailsCat',{'id':cat.id})}}">affiche détails</a> </td>
                  </tr>
                           {% endfor %}

                </tbody>
              </table>
            </div>
          </div>
          <!-- page end-->
        </div>
                    
                    </div>
                </div>
</div>
{% endblock %}